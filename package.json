{
  "name": "accelyra-closing-platform",
  "version": "2.0.0",
  "description": "Autonomous Real Estate Closing Platform - React + TypeScript/Node.js",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --recursive run build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "lint": "pnpm --recursive run lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm --recursive run typecheck",
    "test": "pnpm --recursive run test",
    "clean": "pnpm --recursive run clean && rm -rf node_modules"
  },
  "keywords": [
    "real-estate",
    "closing",
    "automation",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "Accelyra",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
